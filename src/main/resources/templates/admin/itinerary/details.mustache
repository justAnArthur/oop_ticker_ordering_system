{{>header}}

{{#itinerary}}
    <div class="sm:flex sm:items-center mb-3">
        <div class="sm:flex-auto">
            <h1 class="text-base font-semibold leading-6 text-gray-900">
                Flight itinerary details
            </h1>
            <p class="mt-2 text-sm text-gray-700">
                Here you can see all about flight itinerary.
            </p>
        </div>
        <!--<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
            <a href="/admin/flight/{{id}}/add"
               class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                Add flight instance
            </a>
        </div>-->
    </div>
    <ul class="sm:flex sm:items-center sm:justify-between !text-white gap-6 p-3 bg-indigo-500 rounded-md">
        <li>{{creationDate}}</li>
        <li class="inline-flex gap-3">
            {{#startingAirport}}{{name}}{{/startingAirport}}
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                 stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"></path>
            </svg>
            {{#finalAirport}}{{name}}{{/finalAirport}}
        </li>
    </ul>
    <ul role="list" class="divide-y divide-gray-100">
        {{#reservations}}
            <li class="flex items-center justify-between gap-x-6 py-5">
                <div class="min-w-full">
                    <div class="flex items-start gap-x-3">
                        <p class="text-sm font-semibold leading-6 text-gray-900">
                            {{reservationNumber}}
                        </p>
                        <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-green-700 bg-green-50 ring-green-600/20">
                            {{status}}
                        </p>
                        <div class="ml-auto flex gap-x-3">
                            <p class="text-sm font-semibold leading-6 text-gray-900">
                                {{#flight}}{{getDepartureDateTime}}{{/flight}}
                            </p>
                            <p class="rounded-md whitespace-nowrap mt-0.5 px-1.5 py-0.5 text-xs font-medium ring-1 ring-inset text-green-700 bg-green-50 ring-green-600/20">
                                {{#flight}}{{status}}{{/flight}}
                            </p>
                        </div>
                    </div>
                    <div class="mt-1 grid gap-y-2 text-xs leading-5 text-gray-500">
                        {{#getSeatEntrySet}}
                            <div class="inline-flex items-center gap-6">
                                <p class="whitespace-nowrap">
                                    {{#key}}{{name}}{{/key}}
                                </p>
                                <svg viewBox="0 0 2 2" class="h-0.5 w-0.5 fill-current">
                                    <circle cx="1" cy="1" r="1"/>
                                </svg>
                                <p class="truncate">
                                    {{#value}}{{id}}{{/value}}
                                </p>
                            </div>
                        {{/getSeatEntrySet}}
                    </div>
                </div>
            </li>
        {{/reservations}}
    </ul>
{{/itinerary}}

{{>footer}}